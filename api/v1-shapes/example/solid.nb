md`# Solid Construction`;

md`## Ball(radius, { resolution: 32 })`;
const ball = Ball(20)
  .view()
  .md('Produces a spherical ball of the given radius.');

md`## Block(radius = 1, height = 1, depth = 0)`;
const box = Block(20, 10, 5)
  .view()
  .md('Produces a block of the given dimensions.');

md`## ChainedHull(...shapes)`;
const chainedHull = ChainedHull(
  Circle(20),
  Square(10).moveZ(20),
  Triangle(30).moveZ(30)
).view();

md`## Hull(...shapes)`;
const hull = Hull(Circle(20), Square(10).moveZ(30))
  .view()
  .md('Produces a solid from the convex hull of the shapes provided.');

md`## Icosahedron(radius)`;
const icosahedron = Icosahedron(10).view().md('An icosahedron of radius 10.');

md`## Polyhedron(vertices, face)`;
const polyhedron = Polyhedron(
  [
    [10, 10, 0],
    [10, -10, 0],
    [-10, -10, 0],
    [-10, 10, 0],
    [0, 0, 10],
  ],
  [
    [4, 1, 0],
    [4, 2, 1],
    [4, 3, 2],
    [4, 0, 3],
    [3, 0, 1],
    [3, 1, 2],
  ]
)
  .view()
  .md('A polyhedron.');

md`## Rod(radius, height, { sides = 32 } = {})`;
const rod = Rod(5, 10)
  .view()
  .md('Produces a cylindical rod of the given radius and length.');
